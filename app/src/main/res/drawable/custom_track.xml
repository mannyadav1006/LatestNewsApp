<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_45dp" />
            <solid android:color="@color/subheading" />
            <stroke android:color="@color/subheading" android:width="1dp"/>
            <size android:height="@dimen/_25dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_25dp" />
            <solid android:color="@color/purple_200" />
            <stroke android:color="@color/purple_200" android:width="1dp"/>
            <size android:height="@dimen/_25dp" />
        </shape>
    </item>
</selector>